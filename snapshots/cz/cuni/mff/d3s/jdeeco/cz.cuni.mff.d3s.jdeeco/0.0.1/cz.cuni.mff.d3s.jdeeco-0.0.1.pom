<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>cz.cuni.mff.d3s.jdeeco</artifactId>
	<version>0.0.1</version>
	<packaging>pom</packaging>
	<groupId>cz.cuni.mff.d3s.jdeeco</groupId>
	<properties>
		<dist>../dist</dist>
		<deecoJPFJar>jdeeco-jpf.jar</deecoJPFJar>
		<river>${dist}/apache-river</river>
		<jdeecoCoreSrc>../jdeeco-core/src</jdeecoCoreSrc>
		<jdeecoDemoSrc>../jdeeco-demo/src</jdeecoDemoSrc>
		<tycho-version>0.16.0</tycho-version>
	</properties>
	<build>
		<plugins>

			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<pomDependencies>consider</pomDependencies>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho-version}</version>
				<extensions>true</extensions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.6</version>
				<executions>
					<execution>
						<id>unpack</id>
						<phase>install</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>cz.cuni.mff.d3s.zip</groupId>
									<artifactId>apache-river</artifactId>
									<version>2.2.0</version>
									<type>zip</type>
								</artifactItem>
							</artifactItems>
							<overWriteIfNewer>true</overWriteIfNewer>
							<outputDirectory>${dist}</outputDirectory>
							<overWriteReleases>true</overWriteReleases>
							<overWriteSnapshots>true</overWriteSnapshots>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-clean-plugin</artifactId>
				<version>2.5</version>
				<executions>
					<execution>
						<id>clean-dist</id>
						<goals>
							<goal>clean</goal>
						</goals>
						<phase>clean</phase>
						<configuration>
							<filesets>
								<fileset>
									<directory>${dist}</directory>
								</fileset>
							</filesets>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.6</version>
				<executions>
					<execution>
						<id>copy-resources</id>
						<phase>validate</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${dist}</outputDirectory>
							<resources>
								<resource>
									<directory>${jdeecoDemoSrc}/../</directory>
									<includes>
										<include>build.xml</include>
									</includes>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<modules>
		<module>../jdeeco-core</module>
		<module>../jdeeco-demo</module>
		<module>../jdeeco-sde</module>
		<module>../jdeeco-jpf</module>
		<module>../jdeeco-core-feature</module>
		<module>../jdeeco-libs-feature</module>
		<module>../jdeeco-p2</module>
	</modules>
	<repositories>
		<repository>
			<id>d3s-releases</id>
			<url>https://github.com/d3scomp/mvn-repo/raw/master/releases/</url>
		</repository>
		<repository>
			<id>update-p2</id>
			<layout>p2</layout>
			<url>http://github.com/d3scomp/p2-update/raw/master/</url>
		</repository>
		<!-- repository> <id>d3s-snapshots</id> <url>https://github.com/d3scomp/mvn-repo/raw/master/snapshots/</url> 
			</repository -->
		<repository>
			<id>juno</id>
			<layout>p2</layout>
			<url>http://download.eclipse.org/releases/juno</url>
		</repository>
		<repository>
			<id>sensoria</id>
			<layout>p2</layout>
			<url>http://svn.pst.ifi.lmu.de/update/sde</url>
		</repository>
		<repository>
			<id>indigo</id>
			<layout>p2</layout>
			<url>http://download.eclipse.org/releases/indigo</url>
		</repository>
	</repositories>
</project>
